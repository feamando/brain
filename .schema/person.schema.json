      "examples": [
        "entity/person/holger-hammel"
      ],
      "title": "Manager"
    },
    "direct_reports": {
      "description": "List of direct reports (entity references)",
      "items": {
        "type": "string"
      },
      "title": "Direct Reports",
      "type": "array"
    },
    "location": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
